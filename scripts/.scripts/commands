#!/usr/bin/env bash

function update(){
    echo '-------------------------'
    echo '--------- DNF -----------'
    echo '-------------------------'
    sudo dnf update --refresh
    echo '-------------------------'
    echo '------- Flatpak ---------'
    echo '-------------------------'
    flatpak update
}

function grub_update(){
    sudo grub2-mkconfig -o /etc/grub2.cfg
    sudo grub2-mkconfig -o /etc/grub2-efi.cfg
}

function update_tools(){
    # Rust Update
    rustup update

    # Emscripten update
    cd ~/Tools/emsdk
    git pull
    ./emsdk install latest
    ./emsdk activate latest

    # Esp-Idf
    cd ~/Tools/esp-idf
    git pull
    ./install.sh

    # Go back to main
    cd ~
}
