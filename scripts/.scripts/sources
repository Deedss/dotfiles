#!/bin/bash

# I install all my software in a folder ~/Software
# Find all bin directories in ~/Software and append them to PATH
SOFTWARE_DIR="$HOME/Software"
for bin_dir in $(find "$SOFTWARE_DIR" -type d -name bin); do
    export PATH="$PATH:$bin_dir"
done

# Vscode native file
export GTK_USE_PORTAL=1

## Personal aliases
alias chrome="flatpak run com.brave.Browser"
alias ls='eza'
alias cat='bat'
alias fp='fzf --preview "bat -n --color=always {}"'
alias fn='nvim "${fp}"'

alias docker='podman'
alias docker-compose='podman-compose'

## Environment Variables
export LIBVIRT_DEFAULT_URI="qemu:///system"
export DOCKER_HOST=unix:///run/user/$UID/podman/podman.sock

# Custom scripts autocomplete
export PATH="$PATH":"$HOME"/.scripts
source "$HOME/.scripts/commands"
source "$HOME/.scripts/fzf_commands"

# Set Editor to NVIM
export EDITOR="$SOFTWARE_DIR/nvim/bin/nvim"
export VISUAL="$SOFTWARE_DIR/nvim/bin/nvim"

# add Local to PATH
export PATH="$PATH":"$HOME"/.local/bin

# Rust
source "$HOME/.cargo/env"

# Android
export ANDROID_HOME="$HOME"/Software/Android/Sdk
export PATH="$PATH":"$ANDROID_HOME"/platform-tools

# Flutter
export CHROME_EXECUTABLE="flatpak run com.brave.Browser"

# Go
export GOPATH="$SOFTWARE_DIR/go"
alias bazel="bazelisk"

# Espressif
alias getIdf=". $HOME/Software/esp-idf/export.sh"

# Emscripten
alias getEmsdk="source $HOME/Software/emsdk/emsdk_env.sh"

# JAVA_HOME
JAVA_HOME="$(dirname "$(dirname "$(realpath "$(which javac)")")")"
export JAVA_HOME
